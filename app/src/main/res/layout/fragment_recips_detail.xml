<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.gihan.backkingapp.fragment.RecipsDetailFragment">


    <include
        android:id="@+id/detail_backing_time_toolbar"
        layout="@layout/tool_bar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recips_detail_tv_recip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Recips"
            android:padding="10dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000000" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recips_detail_recycler_recips"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center"
            android:id="@+id/recips_detail_tv_grdiant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="grdiant"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recips_detail_recycler_grdiant"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>
